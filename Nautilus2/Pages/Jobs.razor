@page "/jobs"

@using Nautilus.Data
@inject JobService JobService

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Job title</th>
                <th>Created Date</th>
                <th>Last Exec Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in forecasts)
            {
            <tr>
                <td>@forecast.Id</td>
                <td>@forecast.Title</td>
                <td>@forecast.CreatedDate.ToShortDateString()</td>
                <td>@forecast.LastExecDate.ToShortDateString()</td>
            </tr>
            }
        </tbody>
    </table>
}

@code {
    private Jobs[] forecasts;

    protected override async Task OnInitializedAsync()
    {
        forecasts = await JobService.GetJobs();
    }
}
